<form method="post" action="/student">
  <label for="first-name-field">First Name:</label>
  <input
  type="text"
  name="first_name"
  id="first-name-field"
  />
  <label for="last-name-field">Last Name:</label>
  <input
  type="text"
  name="last_name"
  id="last-name-field"
  />
  <label for="house-field">House:</label><select name="house" id="house-selection">
    <% @houses.each do |house| %>
    <option value="<%= house.id %>"><%= house.name %></option>
    <% end %>
  </select>
  <label for="age-field">Age:</label><input
  type="number"
  name="age"
  id="age-field">
  <input type="submit" value="Enroll Student">
</form>
